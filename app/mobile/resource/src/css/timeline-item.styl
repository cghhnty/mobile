@import 'nib';

.timeline-item-title {
	text-align: center;
	font-size: 16px;
	margin: 1.4em 0;
}
.timeline-list-date {
	color: #000;
	text-align: center;
	font-size: 12px;
	float: left;
	width: 60px;
	margin: 0px 5px;
	margin-left: 10px;
}

.timeline-list-date-lg {
	font-size: 21px;
}

.timeline-list-describ {
	font-size:  16px;
	vertical-align: top;
	display: inline-block;
	height: 100%;
  	width: 70%;
  	white-space: normal;
  	position: relative;
  	text-align: left;
}



.timeline-item {
	.swiper-container {
		width: 100%;
		height: 290px;
		text-align: center;
	}

	.swiper-slide {
		text-align: center;
		width: 280px;
		height: 100%;
		opacity: 0.4;
		transition: 300ms;
		transform: scale(0);
	}

	.swiper-slide-visible {
		opacity: 0.5;
		//transform: scale(0.85);
		transform: scale(0.75);
	}

	.swiper-slide-active {
		top: 0;
		opacity: 1;
		transform: scale(1);
	}

	.swiper-pagination {
		position: absolute;
		z-index: 20;
		left: 0;
		bottom: 0;
		width: 100%;
		text-align: center;
	}

	.swiper-pagination-switch {
		display: inline-block;
		width: 8px;
		height: 8px;
		border-radius: 8px;
		background: #555;
		margin-right: 5px;
		opacity: 0.8;
		border: 1px solid #fff;
		cursor: pointer;
	}

	.swiper-active-switch {
		background: #fff;
	}
}
.timeline-item-info {
	background-color: #fff;
  	padding: 0.7em;
  	padding-left: 0em;
  padding-top: 1.7em;
  margin: 1.9em;
  margin-left:2.0em;
}