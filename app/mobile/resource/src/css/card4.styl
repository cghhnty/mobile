.card-list {
  margin: 0;
  padding: 5px;
}

a.card {
  display: block;
}

.card {
  position: relative;
  padding: 10px;
  min-height: 140px;
}

.card .card-condition {
  font-size: 24px;
  letter-spacing: 0.1em;
}

.card .card-condition small {
  color: #e6e6e6;
}

.card .card-qrcode-img {
  width: 110px;
  height: 110px;
  position: absolute;
  right: 15px;
  top: 15px;
  -webkit-box-shadow: 1px 2px 5px 0 rgba(102, 102, 102, 0.6);
  -moz-box-shadow: 1px 2px 5px 0 rgba(102, 102, 102, 0.6);
  box-shadow: 1px 2px 5px 0 rgba(102, 102, 102, 0.6);
  opacity: 0.9;
}

.card .card-effective-date {
  position: absolute;
  bottom: 0;
  font-size: 12px;
  color: #cccccc;
}

.card.card-stamp, .card.card-period, .card.card-inactive, .card.card-discount, .card.card-balance {
  -webkit-border-radius: 16px;
  -moz-border-radius: 16px;
  border-radius: 16px;
  border: 1px solid rgba(153, 153, 153, 0.6);
  -webkit-box-shadow: 0 4px 15px 1px rgba(51, 51, 51, 0.6);
  -moz-box-shadow: 0 4px 15px 1px rgba(51, 51, 51, 0.6);
  box-shadow: 0 4px 15px 1px rgba(51, 51, 51, 0.6);
  color: #ffffff;
}

.card.card-stamp {
  background-color: rgb(47, 100, 128);
  -webkit-background-image: -webkit-linear-gradient(90deg, rgba(47, 100, 128, 0.7), rgba(102, 153, 204, 0.7) 50%, rgba(153, 153, 204, 0.7));
  -moz-background-image: -moz-linear-gradient(90deg, rgba(47, 100, 128, 0.7), rgba(102, 153, 204, 0.7) 50%, rgba(153, 153, 204, 0.7));
  -o-background-image: -o-linear-gradient(90deg, rgba(47, 100, 128, 0.7), rgba(102, 153, 204, 0.7) 50%, rgba(153, 153, 204, 0.7));
  background-image: linear-gradient(0deg, rgba(47, 100, 128, 0.7), rgba(102, 153, 204, 0.7) 50%, rgba(153, 153, 204, 0.7));

}

.card.card-period {
  background-color: rgb(94, 90, 62);
  -webkit-background-image: -webkit-linear-gradient(90deg, rgba(94, 90, 62, 0.7), rgba(135, 129, 80, 0.7) 50%, rgba(144, 137, 89, 0.7));
  -moz-background-image: -moz-linear-gradient(90deg, rgba(94, 90, 62, 0.7), rgba(135, 129, 80, 0.7) 50%, rgba(144, 137, 89, 0.7));
  -o-background-image: -o-linear-gradient(90deg, rgba(94, 90, 62, 0.7), rgba(135, 129, 80, 0.7) 50%, rgba(144, 137, 89, 0.7));
  background-image: linear-gradient(0deg, rgba(94, 90, 62, 0.7), rgba(135, 129, 80, 0.7) 50%, rgba(144, 137, 89, 0.7));
}

.card.card-discount {
  background-color: #506a61;
  -webkit-background-image: -webkit-linear-gradient(90deg, #506a61 0%, #97ac94 100%);
  -moz-background-image: -moz-linear-gradient(90deg, #506a61 0%, #97ac94 100%);
  -o-background-image: -o-linear-gradient(90deg, #506a61 0%, #97ac94 100%);
  background-image: linear-gradient(90deg, #506a61 0%, #97ac94 100%);
}

.card.card-balance {
  background-color: rgb(95, 108, 120);
  -webkit-background-image: -webkit-linear-gradient(90deg, rgb(95, 108, 120) 0%, rgb(129, 143, 159) 100%);
  -moz-background-image: -moz-linear-gradient(90deg, rgb(95, 108, 120) 0%, rgb(129, 143, 159) 100%);
  -o-background-image: -o-linear-gradient(90deg, rgb(95, 108, 120) 0%, rgb(129, 143, 159) 100%);
  background-image: linear-gradient(90deg, rgb(95, 108, 120) 0%, rgb(129, 143, 159) 100%);
}

.card.card-inactive {
  background-color: grey;
  -webkit-background-image: -webkit-linear-gradient(90deg, grey, lightgrey 50%, darkgrey);
  -moz-background-image: -moz-linear-gradient(90deg, grey, lightgrey 50%, darkgrey);
  -o-background-image: -o-linear-gradient(90deg, grey, lightgrey 50%, darkgrey);
  background-image: linear-gradient(0deg, grey, lightgrey 50%, darkgrey);
}
