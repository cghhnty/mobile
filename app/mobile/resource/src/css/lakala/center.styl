@import 'nib';

body {
  background-color: #E5E5E5;
}

@media (min-width: 1024px) {
  .lakala-center {
    width: 375px;
    margin: auto;
  }
}

.lakala-center {
  padding 0 10px;

  .user-info {
    padding 15px 0 17px
  }

  .user-avatar {
    width: 73px;
    height: 73px;
    margin: 0 auto 10px;
    border-radius 50%
    overflow hidden

    img {
      width 100%
    }
  }
  .user-name {
    text-align center;
    font-size 16px;
    color #000000
  }
  .no-merchant {
    margin-top 120px
    text-align center
    font-size 14px
    color #c9c9c9

    p {
      margin-top 10px
    }

    img {
      width 120px
      height: 62px;
    }
  }
  .merchants {
    padding 0;
    list-style-type: none
  }
  .merchant {
    margin 14px 0px;
    /*padding 13px 10px;*/
    background url(../../img/lakala/merchant-bg.png) no-repeat
    background-size 100% 100%
    border-radius 5px;
    cursor: pointer;

    &:first-child {
      margin-top 0
    }
    &:last-child {
      margin-bottom 0
    }
  }
  .merchant-name, .coupon-under-merchant {
    display inline-block
    vertical-align middle
  }
  .merchant-name {
    width 70%;
    padding 15px 30px 15px 20px
    font-size 18px
    color #131D28
  }
  @media (max-width: 320px) {
    .merchant-name {
      font-size 13px
    }
  }
  .coupon-under-merchant {
    width 30%
    padding 15px 0
    font-size 15px
    color #ffffff

    .point {
      padding-left 22px
      background url("../../img/lakala/point.png") no-repeat
      background-size 16px 19px;
    }
    .coupon {
      padding-left 22px
      background url("../../img/lakala/coupon.png") no-repeat
      background-size 16px 19px;
    }

  }
}
